{
    "name": "angular-cms",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "hmr": "ng serve --hmr -e=hmr",
        "s": "sudo ng serve --ssl true --ssl-key './tmp/privkey.pem' --ssl-cert './tmp/fullchain.pem' --host sonub.com --port 443",
        "publish": "npm run build:prod:aot:www && npm run deploy",
        "deploy": "firebase deploy",
        "ssl": "ng serve --ssl true --ssl-key './tmp/privkey.pem' --ssl-cert './tmp/fullchain.pem' --host sonub.com --port 443",
        "setup": "npm run build-ie-polyfills",
        "build-ie-polyfills": "node node_modules/webpack/bin/webpack.js -p src/ie-polyfills.js src/assets/js/ie-polyfills.min.js",
        "build:www": "ng build --output-path=www",
        "build:prod:www": "ng build --prod --output-path=www",
        "build:prod:aot:www": "ng build --prod --aot --output-path=www",
        "build:android": "ng build --output-path=www --base-href=/android_asset/www/"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^4.3.0-rc.0",
        "@angular/common": "^4.3.0-rc.0",
        "@angular/compiler": "^4.3.0-rc.0",
        "@angular/core": "^4.3.0-rc.0",
        "@angular/forms": "^4.3.0-rc.0",
        "@angular/http": "^4.3.0-rc.0",
        "@angular/platform-browser": "^4.3.0-rc.0",
        "@angular/platform-browser-dynamic": "^4.3.0-rc.0",
        "@angular/router": "^4.3.0-rc.0",
        "@angular/service-worker": "^1.0.0-beta.16",
        "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.26",
        "classlist.js": "^1.1.20150312",
        "cordova-android": "^6.2.3",
        "cordova-browser": "^4.1.0",
        "cordova-ios": "^4.4.0",
        "cordova-plugin-browsertab": "^0.2.0",
        "cordova-plugin-buildinfo": "^1.1.0",
        "cordova-plugin-compat": "^1.0.0",
        "cordova-plugin-customurlscheme": "^4.3.0",
        "cordova-plugin-device": "^1.1.6",
        "cordova-plugin-inappbrowser": "^1.7.1",
        "cordova-plugin-whitelist": "^1.3.2",
        "cordova-universal-links-plugin": "^1.2.1",
        "core-js": "^2.4.1",
        "firebase": "^4.1.3",
        "ng-pwa-tools": "0.0.15",
        "rxjs": "^5.1.0",
        "shared-library": "github:thruthesky/shared-library",
        "web-animations-js": "^2.2.5",
        "zone.js": "^0.8.12"
    },
    "devDependencies": {
        "@angular/cli": "^1.2.0",
        "@angular/compiler-cli": "^4.3.0-rc.0",
        "@angular/language-service": "^4.3.0-rc.0",
        "@angular/platform-server": "^4.2.6",
        "@angularclass/hmr": "^1.2.2",
        "@types/jasmine": "2.5.45",
        "@types/jquery": "^3.2.2",
        "@types/node": "~6.0.60",
        "codelyzer": "~3.0.1",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.1.2",
        "ts-node": "~3.0.4",
        "tslint": "~5.3.2",
        "typescript": "~2.3.3"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {},
            "cordova-plugin-device": {},
            "cordova-plugin-buildinfo": {},
            "cordova-universal-links-plugin": {},
            "cordova-plugin-browsertab": {},
            "cordova-plugin-inappbrowser": {},
            "cordova-plugin-customurlscheme": {
                "URL_SCHEME": "com.sonub.www",
                "ANDROID_SCHEME": " ",
                "ANDROID_HOST": " ",
                "ANDROID_PATHPREFIX": "/"
            }
        },
        "platforms": [
            "android",
            "browser"
        ]
    }
}
